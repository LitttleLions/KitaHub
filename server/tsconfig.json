{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src", // Back to basic rootDir
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["services/*"],
      "@scrapers/*": ["scrapers/*"],
      "@utils/*": ["scrapers/utils/*"],
      "@extractors/*": ["scrapers/extractors/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "diagnostics": true, // Add diagnostics
    "traceResolution": true, // Add traceResolution
    "allowJs": false
    // Removed baseUrl and paths
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
